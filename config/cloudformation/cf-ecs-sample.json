    "GatewayAttachment": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {
          "Ref": "VpcEcsSample"
        },
        "InternetGatewayId": {
          "Ref": "IgwEcsSample"
        }
      }
    },
    "subnetroute5": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "RtbPrivate"
        },
        "SubnetId": {
          "Ref": "EcsSamplePrivate1"
        }
      }
    },
    "subnetroute6": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "RtbPrivate"
        },
        "SubnetId": {
          "Ref": "EcsSamplePrivate2"
        }
      }
    },
    "route3": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "DestinationCidrBlock": "0.0.0.0/0",
        "RouteTableId": {
          "Ref": "RtbPublic"
        },
        "GatewayId": {
          "Ref": "IgwEcsSample"
        }
      },
      "DependsOn": "GatewayAttachment"
    },
    "route4": {
