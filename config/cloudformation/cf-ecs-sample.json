    "dchpassoc2": {
      "Type": "AWS::EC2::VPCDHCPOptionsAssociation",
      "Properties": {
        "VpcId": {
          "Ref": "VpcEcsSample"
        },
        "DhcpOptionsId": {
          "Ref": "DoptEcsSample"
        }
      }
    },
